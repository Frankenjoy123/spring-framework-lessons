<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <!-- 使用注解解析Controller，自动扫描 -->
    <context:component-scan base-package="com.spring.lesson.bean.postprocessor"/>

    <!--<bean id="messageSender" class="com.sinoiov.lhjh.message.MessageSender"/>-->


    <bean id="person" class="com.spring.lesson.bean.postprocessor.bean.Person">
        <property name="name" value="jack"/>
    </bean>

    <bean id="user" class="com.spring.lesson.bean.postprocessor.bean.User">
        <property name="password" value="${password}"/>
        <property name="username" value="${username}"/>
    </bean>

</beans>